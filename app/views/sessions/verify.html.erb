<% content_for :title, "Confirm Sign In" %>
<main class="container">
  <article>
    <div style="background-color: var(--pico-color-green-50); border: 1px solid var(--pico-color-green-200); border-radius: var(--pico-border-radius); padding: 1rem; margin-bottom: 2rem; text-align: center;">
      <p style="color: var(--pico-color-green-800); margin: 0;">
        You're signing in as:<br>
        <strong style="font-size: 1.125rem;"><%= @login_code.identity.primary_email %></strong>
      </p>
    </div>
    <%= form_with url: confirm_sessions_path, method: :post, local: true do |form| %>
      <%= form.hidden_field :token, value: @login_code.token %>
      <%= form.submit "Confirm Sign In", class: "primary" %>
    <% end %>
    <small>
      Not you?
      <%= link_to "Request a new login link", new_sessions_path %>
    </small>
  </article>
</main>
